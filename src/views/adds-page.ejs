<!DOCTYPE html>
<html>

<head>
    <title>WeeUrl | Redirecting...</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        nonce="<%= nonce %>"></script>
    <script nonce="<%= nonce %>">
        window.addEventListener('load', () => {
            let count = 6;
            const countDownContent = document.getElementById('count-down-content')
            const countDownElement = document.getElementById('count-down')
            const redirectBtnElement = document.getElementById('redirect-btn-element')
            const countDown = setInterval(() => {
                count--;
                countDownElement.innerHTML = count

                document.title = `Please wait ${count} seconds...`

                if (count <= 0) {
                    countDownContent.classList.add('d-none')
                    redirectBtnElement.classList.remove('d-none')
                    document.title = `WeeUrl | ready to redirect`
                    clearInterval(countDown);
                }
            }, 1000); // Runs every 1 second
        });

    </script>
    <script nonce="<%= nonce %>">
        document.addEventListener('DOMContentLoaded', () => {
            (adsbygoogle = window.adsbygoogle || []).push({});
        });
    </script>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1776293455104190"
        crossorigin="anonymous" nonce="<%= nonce %>"></script>
</head>

<body>
    <!-- <h2>Welcome!</h2> -->
    <main class="container">
        <section class="row">
            <div class="col-12">
                <!-- WeeUrl-ads -->
                <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-1776293455104190"
                    data-ad-slot="9885390654" data-ad-format="auto" data-full-width-responsive="true"></ins>
            </div>
            <div class="col-2">
                <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-1776293455104190"
                    data-ad-slot="9885390654" data-ad-format="auto" data-full-width-responsive="true"></ins>
            </div>
            <div class="col-8 d-flex flex-column text-center">
                <div id="count-down-content" class="">
                    <div class="d-flex justify-content-center">
                        <span id="count-down" class="btn btn-outline-primary rounded rounded-circle">5</span>
                    </div>
                    <span class="fw-bold">Generating your link</span>
                </div>
                <div class="d-flex flex-column d-none" id="redirect-btn-element">
                    <span class="fw-bold">Your link is ready</span>
                    <a href="<%= fullUrl %>">
                        <button class="btn btn-primary fw-semibold">Click here</button>
                    </a>
                </div>
            </div>
            <div class="col-2">
                <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-1776293455104190"
                    data-ad-slot="9885390654" data-ad-format="auto" data-full-width-responsive="true"></ins>
            </div>
            <div class="col-12 text-center mt-5">
                <p class="fw-semibold mb-0">Want to shorten your link?</p>
                <p>Visit <a href="<%= clientSide %>" class="btn btn-link">WeeUrl</a>. It's free!</p>
                <p class="fw-bold">NB: This is demo project for <a href="http://abirmahmud.top" class="btn btn-link"
                        target="_blank">portfolio</a>.</p>
            </div>
        </section>
    </main>
</body>

</html>